				<Pair key="title"><>Restore Firmware State 3</></Pair>
				<Pair key="info"><>Copy dev_flash from dev_hdd0/tmp/backup/dev_flash03/</></Pair>
			</Table>
			<Table key="seg_firmware_usb">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/usb_flash.png</></Pair>
				<Pair key="title"><>Restore Firmware State from dev_usb000</></Pair>
				<Pair key="info"><>Copy dev_flash from dev_usb000/dev_flash/</></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="seg_firmware_backup" attr="seg_firmware_backup" src="#seg_firmware_backup_items"/>
			<Query class="type:x-xmb/folder-pixmap" key="seg_firmware_1" attr="seg_firmware_1" src="#seg_firmware_1_item"/>
			<Query class="type:x-xmb/folder-pixmap" key="seg_firmware_2" attr="seg_firmware_2" src="#seg_firmware_2_item"/>
			<Query class="type:x-xmb/folder-pixmap" key="seg_firmware_3" attr="seg_firmware_3" src="#seg_firmware_3_item"/>
			<Query class="type:x-xmb/folder-pixmap" key="seg_firmware_usb" attr="seg_firmware_usb" src="#seg_firmware_usb_item"/>
		</Items>
	</View>

