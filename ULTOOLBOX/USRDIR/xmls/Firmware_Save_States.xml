	<View id="firmware_switcher_items">
		<Attributes>
			<Table key="seg_firmware_backup">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/flash_hdd.png</></Pair>
				<Pair key="title"><>Backup Current Firmware State</></Pair>
				<Pair key="info"><>Save dev_flash in its current state to dev_hdd0 or dev_usb000.</></Pair>
			</Table>
			<Table key="seg_firmware_1">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/hdd_flash.png</></Pair>
				<Pair key="title"><>Restore Firmware State 1</></Pair>
				<Pair key="info"><>Copy dev_flash from dev_hdd0/tmp/backup/dev_flash01/</></Pair>
			</Table>
			<Table key="seg_firmware_2">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/hdd_flash.png</></Pair>
				<Pair key="title"><>Restore Firmware State 2</></Pair>
