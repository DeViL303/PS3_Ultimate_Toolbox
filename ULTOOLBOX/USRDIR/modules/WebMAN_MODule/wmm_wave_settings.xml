<XMBML version="1.0">

	<View id="wmm_wave_settings_main">
		<Attributes>
			<Table key="wmm_wave_settings">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/toggle_wave.png</></Pair>
				<Pair key="title"><>Wave Settings (wMM)</></Pair>
				<Pair key="info"><>Wave settings that require webMAN MOD</></Pair>
				<Pair key="str_noitem"><>msg_error_no_content</></Pair>
				<Pair key="child"><>segment</></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="wmm_wave_settings"	attr="wmm_wave_settings" src="#wmm_wave_setting_items"/>
		</Items>
	</View>
	
	<View id="wmm_wave_setting_items">
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="wmm_wave_settings"	src="xmb://localhost/dev_hdd0/game/ULTOOLBOX/USRDIR/modules/Wave_Module/New_Waves.xml#wmm_wave_settings_items"/>
			<Query class="type:x-xmb/folder-pixmap" key="wmm_wave_remap" src="xmb://localhost/dev_hdd0/tmp/lines/wmm_wave_remap.xml#wmm_lines_remap_items"/>
		</Items>
	</View>
		
	<View id="seg_wave_hdd_item">
		<Attributes>
			<Table key="wave_hdd_item">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/hdd_warning.png</></Pair>
				<Pair key="title"><>All Current Waves on HDD will be overwritten?</></Pair>
				<Pair key="info"><>Press  to continue, Press  to go back.
				
				This will copy all available lines.qrc files to dev_hdd0/tmp/lines/
				
				After selecting this option, Back out of the menu then enter it again to see the new webMAN MOD specific options</></Pair>
				<Pair key="module_name"><>videodownloader_plugin</></Pair>
				<Pair key="module_action"><>fcopy#/dev_hdd0/game/ULTOOLBOX/USRDIR/modules/Wave_Module/lines_hdd#/dev_hdd0/tmp/lines</></Pair>
				<Pair key="bar_action"><>none</></Pair>
				<Pair key="lbl_half"><>1</></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query
				class="type:x-xmb/module-action"
				key="wave_hdd_item"
				attr="wave_hdd_item"
				/>
		</Items>
	</View>
	
	<View id="seg_wave_hdd_item_setup">
		<Attributes>
			<Table key="wave_hdd_item">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/hdd_warning.png</></Pair>
				<Pair key="title"><>All Current Waves on HDD will be overwritten?</></Pair>
				<Pair key="info"><>Press  to continue, Press  to go back.
				
				This will copy all available lines.qrc files to dev_hdd0/tmp/lines/</></Pair>
				<Pair key="module_name"><>videodownloader_plugin</></Pair>
				<Pair key="module_action"><>fcopy#/dev_hdd0/game/ULTOOLBOX/USRDIR/modules/Wave_Module/lines_hdd#/dev_hdd0/tmp/lines</></Pair>
				<Pair key="bar_action"><>none</></Pair>
				<Pair key="lbl_half"><>1</></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query
				class="type:x-xmb/module-action"
				key="wave_hdd_item"
				attr="wave_hdd_item"
				/>
		</Items>
	</View>
	
</XMBML>