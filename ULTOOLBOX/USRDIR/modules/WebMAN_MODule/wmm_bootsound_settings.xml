<XMBML version="1.0">

<View id="wmm_bootsound_settings_main">
		<Attributes>
			<Table key="wmm_bootsound_settings">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/toggle_audio.png</></Pair>
				<Pair key="title"><>Coldboot Sound Settings (wMM)</></Pair>
				<Pair key="info"><>Coldboot Sound settings that require webMAN MOD</></Pair>
				<Pair key="str_noitem"><>msg_error_no_content</></Pair>
				<Pair key="child"><>segment</></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="wmm_bootsound_settings"	attr="wmm_bootsound_settings" src="#wmm_bootsound_settings_items"/>
		</Items>
	</View>
	
	<View id="wmm_bootsound_settings_items">
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="wmm_bootsound_settings"	src="xmb://localhost/dev_hdd0/game/ULTOOLBOX/USRDIR/modules/Coldboot_Module/Coldboot_Sounds.xml#wmm_bootsound_settings_menu"/>
			<Query class="type:x-xmb/folder-pixmap" key="wmm_bootsound_remap" src="xmb://localhost/dev_hdd0/tmp/coldboot/wmm_bootsound_remap.xml#wmm_bootsound_remap_items"/>
		</Items>
	</View>
		
	<View id="seg_bootsound_hdd_item">
		<Attributes>
			<Table key="bootsound_hdd_item">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/hdd_warning.png</></Pair>
				<Pair key="title"><>All Current Coldboot Sounds on HDD will be overwritten?</></Pair>
				<Pair key="info"><>Press  to continue, Press  to go back.
				
				This will copy all available ac3 files to dev_hdd0/tmp/coldboot/
				
				After selecting this option, Back out of the menu then enter it again to see the new webMAN MOD specific options</></Pair>
				<Pair key="module_name"><>videodownloader_plugin</></Pair>
				<Pair key="module_action"><>fcopy#/dev_hdd0/game/ULTOOLBOX/USRDIR/modules/Coldboot_Module/boot_sounds#/dev_hdd0/tmp/coldboot</></Pair>
				<Pair key="bar_action"><>none</></Pair>
				<Pair key="lbl_half"><>1</></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query
				class="type:x-xmb/module-action"
				key="bootsound_hdd_item"
				attr="bootsound_hdd_item"
				/>
		</Items>
	</View>
	
	<View id="seg_bootsound_hdd_item_setup">
		<Attributes>
			<Table key="bootsound_hdd_item">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/hdd_warning.png</></Pair>
				<Pair key="title"><>All Current Coldboot Sounds on HDD will be overwritten?</></Pair>
				<Pair key="info"><>Press  to continue, Press  to go back.
				
				This will copy all available ac3 files to dev_hdd0/tmp/coldboot/</></Pair>
				<Pair key="module_name"><>videodownloader_plugin</></Pair>
				<Pair key="module_action"><>fcopy#/dev_hdd0/game/ULTOOLBOX/USRDIR/modules/Coldboot_Module/boot_sounds#/dev_hdd0/tmp/coldboot</></Pair>
				<Pair key="bar_action"><>none</></Pair>
				<Pair key="lbl_half"><>1</></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query
				class="type:x-xmb/module-action"
				key="bootsound_hdd_item"
				attr="bootsound_hdd_item"
				/>
		</Items>
	</View>
	
</XMBML>