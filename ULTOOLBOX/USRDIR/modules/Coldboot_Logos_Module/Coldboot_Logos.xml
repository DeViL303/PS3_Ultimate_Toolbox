<XMBML version="1.0">

	<View id="remove_module_item">
		<Attributes>
			<Table key="remove_module">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/delete_hdd.png</></Pair>
				<Pair key="title"><>Remove this module</></Pair>
				<Pair key="info"><>Delete these resources from HDD (71MB)</></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="remove_module"	attr="remove_module" src="#remove_module_action_item"/>
		</Items>
	</View>

	<View id="remove_module_action_item">
		<Attributes>
			<Table key="remove_module_action">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/warning_folder.png</></Pair>
				<Pair key="title"><>Permanently delete these resources, are you sure?</></Pair>
				<Pair key="info"><>Press  to continue, Press  to go back.
				
				Warning: To reverse this action you will need to download the Coldboot Logos pack again!</></Pair>
				<Pair key="module_name"><>videodownloader_plugin</></Pair>
				<Pair key="module_action"><>fdelete#/dev_hdd0/game/ULTOOLBOX/USRDIR/modules/Coldboot_Logos_Module</></Pair>
				<Pair key="bar_action"><>none</></Pair>
				<Pair key="lbl_half"><>1</></Pair>
			</Table>
		</Attributes>
		<Items>
			<Item class="type:x-xmb/module-action" key="remove_module_action" attr="remove_module_action"/>
		</Items>
		</View>

	<View id="install_bootlogos_items">
		<Attributes>
			<Table key="install_coldboots_greyscale">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/toggle_coldboot.png</></Pair>
				<Pair key="title"><>Greyscale Coldboot Logos</></Pair>
				<Pair key="info"><>Selection of greyscale coldboot logos   </></Pair>
			</Table>
			<Table key="install_coldboots_color">
				<Pair key="icon"><>/dev_hdd0/game/ULTOOLBOX/USRDIR/icon/toggle_coldboot.png</></Pair>
				<Pair key="title"><>Colour Coldboot Logos</></Pair>
				<Pair key="info"><>Selection of colour coldboot logos   </></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="install_coldboots_greyscale" attr="install_coldboots_greyscale" src="xmb://localhost/dev_hdd0/game/ULTOOLBOX/USRDIR/modules/Coldboot_Logos_Module/Coldboot_Logos_Items2.xml#install_coldboots_greyscale_items"/>
			<Query class="type:x-xmb/folder-pixmap" key="install_coldboots_color" attr="install_coldboots_color" src="xmb://localhost/dev_hdd0/game/ULTOOLBOX/USRDIR/modules/Coldboot_Logos_Module/Coldboot_Logos_Items1.xml#install_coldboots_color_items"/>
		</Items>
	</View>

</XMBML>